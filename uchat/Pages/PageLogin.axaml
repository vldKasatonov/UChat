<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="uchat.PageLogin">

    <Border CornerRadius="50" Background="White">
        <Grid ColumnDefinitions="Auto,*">
            <Grid Grid.Column="0" Width="415">
                <Grid Grid.Column="0">
                    <Image Source="avares://uchat/Resources/images/bg.jpg" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Grid RowDefinitions="Auto,*,Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="*,*" Margin="35">
                            <TextBlock Grid.Column="0" Text="UChat" FontSize="16" FontWeight="Bold" Foreground="rgba(255,255,255,0.9)" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Spacing="15" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button x:Name="SignUpButtonTop" Content="Sign Up" Foreground="White" FontSize="12" Click="SignUpButtonTop_Click"
                                         Width="80" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="20" Background="Transparent"/>
                                <Button Content="Sign In" Foreground="White" FontSize="12" Width="80" Height="40" 
                                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="20" Background="Transparent" BorderBrush="White"/>  
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="70 0 70 0">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Orientation="Vertical"
                            Spacing="30">
                    <TextBlock Text="Login" HorizontalAlignment="Center" FontSize="40" FontWeight="ExtraBold"
                               Foreground="rgba(0,0,0,0.9)"/>
                    <TextBlock Text="Welcome! Please login to your account." HorizontalAlignment="Center"
                               FontSize="17" Foreground="rgba(0,0,0,0.8)"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Username" FontSize="17" Margin="10,0,0,5"/>
                        <TextBox x:Name="UsernameTextBox" Watermark="Enter username" FontSize="20" Margin="0,0,0,5"/>
                        <TextBlock x:Name="UsernameErrorText" Foreground="Red" FontSize="14" Height="20" Margin="10,0,0,10"/>
                        
                        <TextBlock Text="Password" FontSize="17" Margin="10,0,0,5"/>
                        <TextBox x:Name="PasswordTextBox" Watermark="Enter password" PasswordChar="*" FontSize="25" Margin="0,0,0,5"/>
                        <TextBlock x:Name="PasswordErrorText" Foreground="Red" FontSize="14" Height="20" Margin="10,0,0,10"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                    <Button x:Name="LoginButton" Click="LogInButton_Click" Classes="submitBtn" Content="Login" FontSize="23" FontWeight="Bold" Width="250" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoginErrorText" Foreground="Red" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontWeight="Medium" FontSize="17">
                        <Run Text="Don't have an account?" Foreground="rgba(0,0,0,0.8)"/>
                        <InlineUIContainer BaselineAlignment="Bottom">
                            <TextBlock Text=" Register" Foreground="{StaticResource prColor}" Cursor="Hand" PointerPressed="SignUpText_PointerPressed"/>
                        </InlineUIContainer>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>