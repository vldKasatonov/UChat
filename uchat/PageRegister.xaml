<Page x:Class="uchat.PageRegister"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:UserTextBox="clr-namespace:uchat"
      Title="RegisterPage"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
			<RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Registration" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center"/>

		<UserTextBox:InputTextBox x:Name="NicknameTextBox" Grid.Row="1" HorizontalAlignment="Center"
                                  Header="Name/Nickname" Placeholder="Enter your name"/>
		
        <UserTextBox:InputTextBox x:Name="UsernameTextBox" Grid.Row="2" HorizontalAlignment="Center"
                                  Header="Username" Placeholder="Enter username"/>

        <UserTextBox:InputTextBox x:Name="PasswordTextBox" Grid.Row="3" HorizontalAlignment="Center"
                                  Header="Password" Placeholder="Enter password" IsPassword="True" />

        <UserTextBox:InputTextBox x:Name="ConfirmPasswordTextBox" Grid.Row="4" HorizontalAlignment="Center"
                                  Header="Confirm password" Placeholder="Confirm password" IsPassword="True"/>

        <Button Grid.Row="5" Width="300" Height="70" Content="Register" FontSize="30" Foreground="White" FontWeight="Bold" 
                Cursor="Hand" Click="RegisterButton_Click" Background="#7658B2" BorderBrush="#604184" BorderThickness="5"
                HorizontalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="15"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>